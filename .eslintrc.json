{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "ignorePatterns": [
    "**/node_modules/*",
    "**/public/*",
    "**/build/*",
    "**/dist/*",
    "**/.next/*"
  ],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}